{
  "compilerOptions": {
    "types": ["node"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "/src/**/*.ts",
    "/src/**/*.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    "out",
    "build",
    "dist"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ]
}